<!DOCTYPE html>
<html>
<head>
  <title>Book Notes | <%= yield(:title)%></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div id="container">
		<% flash.each do |key, value| %>
		   <div class="alert alert-<%= key %>"><%= value %></div>
		<% end %>
		<div class="tabbable tabs-left">
		  <ul class="nav nav-tabs" id="side_nav">
		   	<!--<li id="nav-home" class="nav-tab" target="/"><a href="home" data-toggle="tab">
		   		<i class="icon-home"></i> Home</a></li>
		   	-->
		    <li id="nav-books" class="nav-tab" target="/books"><a href="books" data-toggle="tab">
		    	<i class="icon-book"></i> Books</a></li>
	    	<li id="nav-clubs" class="nav-tab"><a href="clubs" data-toggle="tab">
	    		<i class="icon-globe"></i> Clubs</a></li>
		    <li class="nav-tab"><a href="people" data-toggle="tab">
		    	<i class="icon-user"></i> People</a></li>
		    <li class="nav-tab"><a href="subscriptions" data-toggle="tab">
		    	<i class="icon-star"></i> Subscriptions</a></li>
		  </ul>
		  <div class="tab-content">
	   		<%= yield %>
		  </div>
		</div>
		<!--<%= render 'layouts/footer' %>-->
	</div>
</body>
</html>
